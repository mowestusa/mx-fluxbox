[begin] (Fluxbox) 
    [submenu] (Toggle)
    [exec] (Conky) {conkytoggle.sh}
    [exec] (Xfce panel) {mv '~/.fluxbox/mxf/xfce4-panel-fb ~/.fluxbox/mxf/xfce4-panel-fb_bak}
    [end]
    [submenu] (Help) 
    	[exec] (fluxbox) {xdg-open ~/.fluxbox/doc/mxf-faq.pdf}
    	[exec] (MX) {mx-faq}
    [end]
    [exec] (Run...) {fbrun -nearmouse} 
    [separator]
    [exec] (Files) {thunar /home/$USER/.fluxbox} 
    [exec] (Browser) {firefox} 
    [exec] (Terminal) {xfce4-terminal} 
    [submenu] (Office) 
    	[exec] (Suite) {libreoffice}
    	[exec] (PDFs) {qpdfview}
    	[exec] (Notes) {xfce4-notes}
    [end]
    [submenu] (Communicate)
    	[exec] (Email) {thunderbird}
    	[exec] (Chat) {hexchat}
    	[exec] (Video) {skypeforlinux}
    [end]
    [submenu] (Multimedia)
    	[exec] (Music) {deadbeef} 
    	[exec] (Video) {vlc}
    	[exec] (Image) {nomacs}
    	[exec] (YouTube) {smtube}
    	[exec] (Mixer) {pavucontrol}
    [end]
     [separator]
     [submenu] (Look) 
     	[submenu] (Style)
      		[stylesdir] (/usr/share/fluxbox/styles) 
      		[stylesdir] (~/.fluxbox/styles)
     	[end]
     [submenu] (Background)
		[wallpapers] (~/.fluxbox/backgrounds) {feh --bg-scale}
		[separator]
		[wallpapers] (/usr/share/backgrounds) {feh --bg-scale}
	[end]
	[end]
	[submenu] (System)
		[exec] (All apps) {xfce4-appfinder}
		[submenu] (Packages)
     		[exec] (Package Installer) {su-to-root -X -c mx-packageinstaller}
     		[exec] (Synaptic) {synaptic-pkexec}
     	[end]
     [submenu] (Disks)
     	[exec] (Mount) {sudo disk-manager}
     	[exec] (Manage) {sudo gparted}
     [end]
     	[exec] (Processes) {xfce4-taskmanager}
     [submenu] (Conky)
     	[exec] (Conky Manager) {conky-manager}
     	[exec] (MX-Conky) {mx-conky}
     [end]
     [exec] (Power) {xfce4-power-manager}
     [end]	 
     [submenu] (Settings)
     	[exec] (MX Tools) {mx-tools}
     	[exec] (Xfce Settings) {xfce4-settings-manager}
     	[exec] (Touchpad) {/opt/extras.ubuntu.com/touchpad-indicator/bin/touchpad-indicator}
     	[exec] (Bluetooth) {blueman-manager}
     	[submenu] (Keyboard)
		[exec] (DE) {setxkbmap de}
		[exec] (ES) {setxkbmap es} 
		[exec] (FR) {setxkbmap fr}
		[exec] (GB) {setxkbmap gb|
		[exec] (IT) {setxkbmap it}
		[exec] (PL) {setxkbmap pl|
		[exec] (PT) {setxkbmap pt|
		[exec] (RU) {setxkbmap ru}
		[exec] (US) {setxkbmap us}
	[end]
	[end] 
   	[submenu] (Accessories)
        [exec] (Editor) {featherpad}
     	[exec] (Calculator) {galculator}
     	[exec] (Capture) {xfce4-screenshooter}
     	[exec] (Calendar) {orage}
     [end]        
     [separator]
     [restart] (Restart) {/usr/bin/startfluxbox}
     [exec] (Suspend) {sudo 'pm-suspend'}
     [exit] (Logout) 
     [end]



